{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"lib-build": "cd packages/vue-inline-svg && npx vite build",
		"lib-generate-types": "cd packages/vue-inline-svg && npx vue-tsc lib/vue-inline-svg.ts --declaration --emitDeclarationOnly --outDir dist",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"release": "npm run lib-build && npm run lib-generate-types"
	},
	"dependencies": {
		"@allindevelopers/prettier-config": "^1.0.0",
		"@vitejs/plugin-vue": "^5.2.1",
		"@vue/tsconfig": "^0.7.0",
		"html-parse-stringify": "^3.0.1",
		"np": "^10.1.0",
		"nuxt": "^3.15.2",
		"prettier": "^3.4.2",
		"typescript": "~5.6.2",
		"vite": "^6.0.5",
		"vue": "^3.5.13",
		"vue-router": "latest",
		"vue-tsc": "^2.2.0"
	},
	"prettier": "@allindevelopers/prettier-config",
	"workspaces": [
		"packages/*"
	]
}
